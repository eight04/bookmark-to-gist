{
  "title": "Bookmark Sync",
  "name": "bookmark-sync",
  "version": "0.3.0",
  "description": "Sync bookmarks between browsers",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --cache",
    "test": "npm run lint && npm run build && web-ext lint",
    "start": "web-ext run",
    "start-chrome": "web-ext run --target=chromium",
    "build": "npm run build-src && npm run build-artifact",
    "build-src": "sync-version src/static/manifest.json && shx rm -rf build/* && rollup -c",
    "build-locales": "tx pull -a --use-git-timestamps && webext-tx-fix -s src/static",
    "build-artifact": "shx rm -rf web-ext-artifacts/* && web-ext build --ignore-files **/*.js.map && git archive -o web-ext-artifacts/source.zip HEAD",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push --follow-tags && npm run build"
  },
  "eslintIgnore": [
    "build"
  ],
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/webextension-polyfill": "^0.12.4",
    "eslint": "^9.39.1",
    "rollup": "^4.53.3",
    "rollup-plugin-cjs-es": "^3.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-iife": "^0.7.1",
    "rollup-plugin-write-output": "^0.2.1",
    "shx": "^0.4.0",
    "sync-version": "^1.1.0",
    "tiny-glob": "^0.2.9",
    "web-ext": "^9.2.0"
  },
  "repository": "eight04/bookmark-sync",
  "private": true,
  "dependencies": {
    "event-lite": "^1.0.0",
    "webextension-polyfill": "^0.12.0"
  },
  "type": "module"
}
